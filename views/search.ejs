<%- include("./partials/header.ejs") %>
<%- include("./partials/userheader.ejs") %>


<div class="introheading"> Search Results </div>

<div class="searchResult">
<% data.forEach(function(ele){ %>       
  <div class="postCollection">
     
    <div class="postColletionInside">    
        <div class="postContainer">
            <h5> Company Name: <%= ele.companyName %> </h5>
            <ul> 
                <li>Sponsor Type: <%=ele.sponsorType %></li>
                <li>Duration Period: <%=ele.durationNo %></li> 
                <li>Contact No: <%=ele.contactNo  %></li> 
                <li>Contact Email: <%=ele.contactEmail %></li>
            </ul>
        </div> 
        <div class="postLogo">
                <img src="<%=ele.logo%>" alt="No IMG"></img>
        </div>
    </div>  
    <div class="smallButton" style="display: flex; width:100%;">

        <form action="/<%=ejsUsername%>/1/apply" method="POST">

            <input style="display:none" type="text" name="companyName" value="<%=ele.companyName%>"></input>

            <input style="display:none" type="text" name="sponsorType" value="<%=ele.sponsorType%>"></input>    
            
            <input style="display:none" type="text" name="durationNo" value="<%=ele.durationNo%>"></input>           
          
            <input style="display:none" type="text" name="contactNo" value="<%=ele.contactNo%>"></input> 
          
            <input style="display:none" type="text" name="contactEmail" value="<%=ele.contactEmail%>"></input>
                
            <input style="display:none" type="text" name="logo" value="<%=ele.logo%>"></input>

            <button class="smallSubmit">Apply Now</button>
        </form>

                <button class="smallSubmit" > <a href="/<%=ejsUsername%>/0/<%=ele._id%>/update">Edit </a></button>
                
            <form action="/<%=ejsUsername%>/0/<%=ele._id%>?_method=DELETE" method="POST">
                <button class="smallSubmit" id="delete">Delete</button>
            </form>
    </div> 
    </div>
<% }) %>
</div>






<%- include("./partials/footer.ejs") %>